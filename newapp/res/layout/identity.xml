<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/pad3"
    android:layout_marginRight="@dimen/pad3"
    android:layout_marginTop="@dimen/pad3"
    android:background="@drawable/corner_round"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/pad3"
    android:paddingLeft="@dimen/pad3" >

     

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pad1"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/spa74"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_member_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/pad4"
                    android:text="张某某"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/f21" />

                <TextView
                    android:id="@+id/tv_member_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/pad4"
                    android:text="（10086）13580493538"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/f21" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

</LinearLayout>